<UserControl x:Class="TablesWPF.Controls.QuantitySpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="PART_TextBox"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 MinWidth="40"
                 Padding="2"
                 TextAlignment="Center"
                 TextChanged="PART_TextBox_TextChanged"
                 PreviewTextInput="PART_TextBox_PreviewTextInput" />
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="2,0,0,0">
            <Button x:Name="PART_Up" Content="▲" Click="PART_Up_Click" Padding="2" FontSize="10" />
            <Button x:Name="PART_Down" Content="▼" Click="PART_Down_Click" Padding="2" FontSize="10" />
        </StackPanel>
    </Grid>
</UserControl>
