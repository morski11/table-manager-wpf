<UserControl x:Class="TablesWPF.Views.WaiterWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:TablesWPF.Models">
    <UserControl.Resources>
        <!-- Content when a table is selected: orders list or empty state -->
        <DataTemplate x:Key="TableOrdersTemplate" DataType="{x:Type models:Table}">
            <StackPanel>
                <TextBlock Text="Orders"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,8" />
                <TextBlock Text="No orders for this table"
                           Foreground="#666"
                           FontSize="14"
                           Margin="0,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Orders.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <ItemsControl ItemsSource="{Binding Orders}"
                              Margin="0,8,0,0">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Orders.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <Trigger Property="HasItems" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,6"
                                    Margin="0,0,0,4"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <TextBlock Text="Order"
                                           FontSize="13" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200" />
            <ColumnDefinition Width="*" MinWidth="240" />
        </Grid.ColumnDefinitions>

        <!-- Left: Create table + table list -->
        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <Button Content="Create table"
                    Command="{Binding CreateTableCommand}"
                    Padding="12,8"
                    Margin="0,0,0,12"
                    FontSize="14"
                    Cursor="Hand" />
            <TextBlock Text="Tables"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Margin="0,0,0,6" />
            <ListBox ItemsSource="{Binding Tables}"
                     SelectedItem="{Binding SelectedTable, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     MinHeight="200"
                     BorderThickness="1"
                     BorderBrush="#CCCCCC"
                     Padding="8,4" />
        </StackPanel>

        <!-- Right: Orders for selected table -->
        <Border Grid.Column="1"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="16"
                Background="#FAFAFA">
            <Grid>
                <!-- No table selected -->
                <TextBlock Text="Select a table"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#666"
                           FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTable}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <!-- Table selected: show orders or empty state -->
                <ContentControl Content="{Binding SelectedTable}"
                                ContentTemplate="{StaticResource TableOrdersTemplate}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTable}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
