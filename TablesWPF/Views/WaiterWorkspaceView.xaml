<UserControl x:Class="TablesWPF.Views.WaiterWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:TablesWPF.Models"
             xmlns:controls="clr-namespace:TablesWPF.Controls">
    <UserControl.Resources>
        <!-- Content when a table is selected: orders list or empty state -->
        <DataTemplate x:Key="TableOrdersTemplate" DataType="{x:Type models:Table}">
            <StackPanel>
                <TextBlock Text="Orders"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,8" />

                <!-- Selected table name -->
                <TextBlock Text="{Binding Name}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,8" />

                <TextBlock Text="No orders for this table"
                           Foreground="#666"
                           FontSize="14"
                           Margin="0,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Orders.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Single-order per table: orders list removed (order shown below) -->
                <!-- When the table has no orders the "No orders for this table" message above will be visible. -->

                <!-- Product picker + actions (bound to VM via DataContext on UserControl) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ComboBox Width="320"
                              IsEditable="True"
                              IsTextSearchEnabled="False"
                              StaysOpenOnEdit="True"
                              ItemsSource="{Binding DataContext.ProductsView, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding DataContext.SelectedProduct, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                              Text="{Binding DataContext.ProductSearchText, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="Name"
                              PreviewTextInput="ProductComboBox_PreviewTextInput"
                              Margin="0,0,8,0" />
                    <Button Content="Add"
                            Command="{Binding DataContext.AddOrderItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Padding="10,6"
                            FontSize="13"
                            Cursor="Hand" />
                    <Button Content="Remove"
                            Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Padding="10,6"
                            Margin="8,0,0,0"
                            FontSize="13"
                            Cursor="Hand" />
                </StackPanel>

                <!-- Items grid with overlaid status message -->
                <Grid Margin="0,0,0,8">
                    <!-- Items grid for the selected order -->
                    <DataGrid ItemsSource="{Binding DataContext.SelectedOrder.OrderItems, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding DataContext.SelectedOrderItem, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              RowBackground="White"
                              AlternatingRowBackground="#F7F7F7">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding Name}" IsReadOnly="True" Width="*" />
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='{}{0:F2} €'}" IsReadOnly="True" Width="110" />
                            <DataGridTemplateColumn Header="Quantity" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <controls:QuantitySpinner Value="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 Minimum="1"
                                                                 HorizontalAlignment="Center"
                                                                 Width="90" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='{}{0:F2} €'}" IsReadOnly="True" Width="110" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Transient status message below the grid -->
                <TextBlock Text="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="Green"
                           FontSize="14"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Order total displayed under the items -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Order total: " FontWeight="SemiBold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding DataContext.SelectedOrder.Total, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0:F2} €'}" FontWeight="SemiBold" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200" />
            <ColumnDefinition Width="*" MinWidth="240" />
        </Grid.ColumnDefinitions>

        <!-- Left: Create table + table list -->
        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <Button Content="Create table"
                    Command="{Binding CreateTableCommand}"
                    Padding="12,8"
                    Margin="0,0,0,12"
                    FontSize="14"
                    Cursor="Hand" />
            <TextBlock Text="Tables"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Margin="0,0,0,6" />
            <ListBox ItemsSource="{Binding Tables}"
                     SelectedItem="{Binding SelectedTable, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     MinHeight="200"
                     BorderThickness="1"
                     BorderBrush="#CCCCCC"
                     Padding="8,4" />
            <StackPanel Orientation="Horizontal"
                        Margin="0,8,0,0">
                <Button Content="Edit name"
                        Command="{Binding EditTableCommand}"
                        Padding="10,6"
                        FontSize="13"
                        Cursor="Hand" />
                <Button Content="Delete"
                        Command="{Binding DeleteTableCommand}"
                        Padding="10,6"
                        Margin="8,0,0,0"
                        FontSize="13"
                        Cursor="Hand" />
            </StackPanel>
        </StackPanel>

        <!-- Right: Orders for selected table -->
        <Border Grid.Column="1"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="16"
                Background="#FAFAFA">
            <Grid>
                <!-- No table selected -->
                <TextBlock Text="Select a table"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#666"
                           FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTable}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <!-- Table selected: show orders or empty state -->
                <ContentControl Content="{Binding SelectedTable}"
                                ContentTemplate="{StaticResource TableOrdersTemplate}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTable}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
